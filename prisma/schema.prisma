generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String     @id @default(cuid())
  firstName       String
  lastName        String
  email           String     @unique
  password        String
  number          Int
  isAuthenticated Boolean    @default(false)
  rating          Float      @default(0)
  location        Location[]
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

model Location {
  id          String   @id @default(cuid())
  street      String
  city        String
  state       String
  houseNumber Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  User        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Service {
  id          String   @id @default(cuid())
  name        String
  price       Float
  serviceType String
  local       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
